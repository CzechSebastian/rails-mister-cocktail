<div class="container">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit "add a dose", class: "btn btn-primary" %>
      <%= f.submit "Save it !", class: "btn btn-primary" %>
      <%= link_to 'Return', cocktails_path, class: "btn btn-primary"  %>
    <% end %>
</div>
