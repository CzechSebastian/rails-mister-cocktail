<div class="home-layout">
  <div class="home-header">
    <div class="home-header-content">
    </div>
  </div>

  <div class="home-input">
    <div class="home-form">
      <%= form_tag(cocktails_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search for a cocktail" %>
      <%= submit_tag "Search" %>
      <% end %>
    </div>
  </div>
    <div class="container text-center">
      <%= link_to '<i class="fas fa-cocktail fa-4x"></i>'.html_safe, cocktails_path  %>
      <%= link_to '<i class="fas fa-plus-circle fa-4x"></i>'.html_safe, new_cocktail_path, class:"plus" %>

  </div>
</div>
